<UserControl x:Class="MapBuilder.MapCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapBuilder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Stretch="Fill" Source="{Binding ImageSource}" />
        <Border MouseDown="Border_MouseDown" Background="{Binding CellBackground}" Opacity="{Binding CellTransparency}" BorderThickness=".5" BorderBrush="Gray" ></Border>
    </Grid>
</UserControl>

@using EtrianOdysseyClone.Pages.Tools
@using EtrianOdysseyClone.Data
@inject GameSession SessionInfo


    <div class="flex flex-row">
        <div>
            <PrimarySideMenu MenuOptions="_menuOptions"></PrimarySideMenu>
        </div>
        <div>
            <h3>Town</h3>
            <img src="/Images/ShopDay.stex.png" asp-append-version="true" />
        </div>
    </div>

    @code {
        private Dictionary<string, Action> _menuOptions;
        private string _selectedOption;

        protected override void OnInitialized()
        {
            _menuOptions = new Dictionary<string, Action>()
{
            { "Flaus Inn", () => GotoLocation(OverworldLocation.Inn)},
            { "Renovation Shop", () => GotoLocation(OverworldLocation.Shop)},
            //{ "Stickleback Bar", () => GotoLocation(OverworldLocation.Bar)},
            { "Explorers Guild", () => GotoLocation(OverworldLocation.Guild)},
            { "Dungeon Entrance", () => GotoLocation(OverworldLocation.Dungeon)}
        };
        }

        private void GotoLocation(OverworldLocation location)
        {
            SessionInfo.CurrentLocation = location;
        }
    }
<div>
    @foreach (var option in MenuOptions)
    {
        <div>
            <div class="flex flex-col justify-evenly mr-3">
                <button class="bg-blue-300 bg-opacity-70 rounded-r-lg text-center text-wrap px-20 py-2 text-gray-700 font-bold border-2 border-l-0 border-gray-600" @onclick="() => OnOptionSelected(option)">@option.Key</button>
            </div>
        </div>
    }
</div>
@code {
    [Parameter]
    public Dictionary<string, Action> MenuOptions { get; set; }


    private void OnOptionSelected(KeyValuePair<string, Action> selectedOption)
    {
        MenuOptions[selectedOption.Key]();
    }
}
